<section class="slide center" data-background-color="#dbd5bb">
	<video src="inc/video/yo-demo.mov" width="990"></video>
</section>
<script>
	Reveal.addEventListener('slidechanged', function(e) {
		var player = e.currentSlide.querySelector('[src="inc/video/yo-demo.mov"]'),
			timeout;

		if (player) {
			player.pause();
			player.currentTime = 0;
			window.clearTimeout(timeout);

			timeout = window.setTimeout(function() {
				player.play();
			}, 4000)
		}

	});
</script>