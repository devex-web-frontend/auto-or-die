@import "nib";
@import "reset";
@import "settings.styl";

@import "theme.styl";


.reveal {
	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		font-weight: bold;
		line-height: 1.1em;
	}

	.slide-background {
		transform: scale(0.95);
		border-radius: 20px;

		background: #FFFFFF;
		box-shadow: 0 0 25px rgba(0, 0, 0, 0.25);
	}
	.slide-justify {
		text-align: left;

		h1,
		h2,
		h3,
		h4,
		h4,
		h5,
		h6 {
			text-align: center;
		}
	}

	ul {
		font-size: 1.1em;
		line-height: 2em;

		ul {
			font-size: 0.6em;
			line-height: 1.5em;
		}
	}
	section img {
		border: none;
		box-shadow: none;
	}
}
.slideNumber {
	font-family: $mainFont;
	absolute: bottom 5% right 5%;
	display: block;
	margin: -30px 0 0 -30px;
	width: 30px;
	height: 30px;

	color: #E64D1A;
}

.reveal .progress span {
	background: #fff;
}
