// Base settings for all themes that can optionally be
// overridden by the super-theme

// Background of the presentation
$backgroundColor = #F15A22;

// Primary/body text
$mainFont = 'Noto Sans', Impact, sans-serif;
$mainFontSize = 36px;
$mainColor = #333;

// Headings
$headingMargin = 0 0 20px 0;
$headingFont = 'Russo One', Impact, sans-serif;
$headingColor = #333;
$headingLineHeight = 0.9em;
$headingLetterSpacing = 0.02em;
$headingTextTransform = uppercase;
$headingTextShadow = 0px 0px 6px rgba(0,0,0,0.2);
$heading1TextShadow = $headingTextShadow;

// Links and actions
$linkColor = #13DAEC;
$linkColorHover = lighten( $linkColor, 20% );

// Text selection
$selectionBackgroundColor = #FF5E99;
$selectionColor = #fff;

// Generates the presentation background, can be overridden
// to return a background image or gradient
bodyBackground() {
	background-image: linear-gradient(top left, rgba(255, 255, 255, 0.25) 0%, rgba(255, 255, 255, 0.25) 25%, rgba(255, 255, 255, 0) 25%, rgba(255, 255, 255, 0) 50%, rgba(255, 255, 255, 0.25) 50%, rgba(255, 255, 255, 0.25) 75%, rgba(255, 255, 255, 0) 75%, rgba(255, 255, 255, 0) 100%);
	background-size: 100px 100px;
}