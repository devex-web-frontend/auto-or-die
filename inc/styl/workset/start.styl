.reveal {
	.slide-start {
		color: #AAA;

		h1 {
			font-size: 2.3em;
		}
		
		img {
			height: 96px;
			background: none;
		}

		.conf,
		.speakers {
			width: 45%;
			margin-top: 3.25em;
			font-size: .7em;
			line-height: 1.3;
		}

		.conf {
			float: left;
			text-align: left;

			&--logo {
				img {
					float: left;
					margin: -.2em .5em 0 0;
				}
			}


		}

		.speakers {
			float: right;
			text-align: right;

			&--company {
				img {
					float: right;
					margin: -.2em 0 0 .5em;
				}
			}

			&--list {
				display: block;
				margin: 0;
				text-align: right;
				list-style: none;
				line-height: 1.2;

				li::before {
					display: none;
				}
			}
		}
	}
}
