.reveal {
	.slide-start {
		color: #545454;

		h1 {
			font-size: 2.8em;
		}
		
		img {
			background: none;
		}

		.conf,
		.speakers {
			width: 45%;
			margin-top: 2em;
			line-height: 1.3;
		}

		.conf {
			float: left;
			text-align: left;

			img {
				float: left;
				margin: .2em .5em 0 0;
			}
		}

		.speakers {
			float: right;
			text-align: right;

			&--list {
				display: block;
				margin: 0;
				text-align: right;
				list-style: none;
				line-height: 1.2;

				li::before {
					display: none;
				}
			}

			img {
				float: right;
				margin: 0 0 0 .5em;
			}
		}
	}
}
