{{defineRandomId this}}

<div class="control control-button {{modifiers this 'control'}} {{#unless label}} control-noLabel {{/unless}}
		{{#if disabled}} control-disabled {{/if}}">
	{{#nolinebreaks}}
		{{> control--label}}
		<span class="control--wrap">
			{{> button.button this}}
			{{> control--postfix}}
		</span>
	{{/nolinebreaks}}
</div>