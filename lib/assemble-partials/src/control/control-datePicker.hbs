{{defineRandomId this}}

<div class="control control-datePicker {{modifiers this 'control'}} {{#unless label}} control-noLabel {{/unless}}
		{{#if disabled}} control-disabled {{/if}}">
	{{#nolinebreaks}}
		{{> control--label}}
		<span class="control--wrap">
			<input type="date" value="{{val}}" min="{{min}}" max="{{max}}"
				{{#if disabled}} disabled {{/if}} id="{{randomId}}" class="{{className}}">
			{{> control--postfix}}
		</span>
	{{/nolinebreaks}}
</div>