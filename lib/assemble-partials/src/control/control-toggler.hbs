{{defineRandomId this}}

<div class="control control-toggler {{modifiers this 'control'}} {{#unless label}} control-noLabel {{/unless}}
		{{#if disabled}} control-disabled {{/if}}">
	{{#nolinebreaks}}
		{{> control--label}}
		<span class="control--wrap">
			<select data-toggler {{#if disabled}} disabled {{/if}} id="{{randomId}}" class="{{className}}">
				{{> _select_content}}
			</select>
			{{> control--postfix}}
		</span>
	{{/nolinebreaks}}
</div>