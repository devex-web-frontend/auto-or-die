$columnsAvailable ?= (2 3 4 5 6 8 10 12 20);
$columnsGap ?= 20px;

.columns {
	box-sizing: border-box;
	width: 100%;
	height: 100%;
	clearfix();

	&--column {
		float: left;
		box-sizing: border-box;
		padding-left: $columnsGap;
		width: 100%;
		height: 100%;

		&:first-child {
			padding-left: 0;
		}

		&-hidden {
			display: none;
		}

		for $colsTotal in $columnsAvailable {
			for $col in (1...$colsTotal) {
				&-{$col}_{$colsTotal} {
					width: $col * (100% / $colsTotal);
				}
			}
		}
	}

	&-between {
		.columns {
			&--column {
				padding: 0 ($columnsGap / 2);
			}
		}
	}
}

